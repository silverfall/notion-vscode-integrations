# Project Configuration Template
# Copy this file to .env and fill in your actual values
# Keep .env out of version control (it's in .gitignore)

# Notion Integration (for automatic file sync to Notion)
# Get your API key from: https://www.notion.so/my-integrations
# Get Parent Page ID from the page URL where files will be synced
NOTION_API_KEY=ntn_your_notion_api_key_here
NOTION_PARENT_PAGE_ID=your_parent_page_id_here

# Project Configuration
DEBUG=false
PROJECT_NAME=My Project

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/mydb

# API Configuration (if needed)
# API_KEY=your_api_key_here
# API_SECRET=your_api_secret_here

# Other Configuration (add as needed)
# CUSTOM_SETTING=value
